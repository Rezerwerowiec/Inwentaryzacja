<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".printers.PrintersMenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="MENU DRUKAREK"
        android:layout_gravity="top"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj nową drukarkę"
        android:textSize="30sp"
        android:layout_marginTop="30sp"
        android:onClick="AddNewPrinter"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/item_type"
        android:layout_marginTop="80sp"
        android:id="@+id/spinner"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edytuj materialy eksploatacyjne"
        android:textSize="30sp"
        android:layout_marginTop="50sp"
        android:onClick="EditCompatible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pokaż stan magazynowy"
        android:textSize="30sp"
        android:layout_marginTop="45sp"
        android:onClick="ShowStockStatus"/>


</LinearLayout>