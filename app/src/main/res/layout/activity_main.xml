<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pfhbipm_logo" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START"
        android:onClick="onClickGoToStart"
        android:id="@+id/start"
        android:textSize="20sp"

        android:layout_marginTop="40sp"
        android:layout_weight="5"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/additemtype"
        android:text="pokaÅ¼ stany magazynowe"
        android:onClick="onClickShowStockStatus"
        android:layout_weight="5"
        android:textSize="20sp"

        android:layout_marginTop="20sp"/>
    <Button
        android:id="@+id/printersmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_weight="5"
        android:textSize="20sp"
        android:onClick="onClickShowPrintersMenu"
        android:text="MENU DRUKAREK" />

    <Button
        android:id="@+id/logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_weight="5"
        android:textSize="20sp"

        android:onClick="onClickShowLogs"
        android:text="LOGS" />


</LinearLayout>